<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pantalla3">

    <ImageView
        android:id="@+id/facturaImgBici"
        android:layout_width="127dp"
        android:layout_height="93dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/facturaTextNombre"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facturaImgBici" />

    <TextView
        android:id="@+id/facturaTextPrecio"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/facturaTextNombre"
        app:layout_constraintTop_toBottomOf="@+id/facturaTextNombre" />

    <TextView
        android:id="@+id/facturaTextExtras"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/facturaTextPrecio"
        app:layout_constraintTop_toBottomOf="@+id/facturaTextPrecio" />

    <TextView
        android:id="@+id/facturaTextTiempo"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/facturaTextExtras"
        app:layout_constraintTop_toBottomOf="@+id/facturaTextExtras" />

    <TextView
        android:id="@+id/facturaTextSeguro"
        android:layout_width="175dp"
        android:layout_height="25dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="@+id/facturaTextTiempo"
        app:layout_constraintTop_toBottomOf="@+id/facturaTextTiempo" />

    <TextView
        android:id="@+id/facturaTextCosteTotal"
        android:layout_width="243dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/facturaTextSeguro"
        app:layout_constraintTop_toBottomOf="@+id/facturaTextSeguro" />

</androidx.constraintlayout.widget.ConstraintLayout>