<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/itemRegistro"
        android:layout_width="315dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/itemTarea"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemRegistro"
        android:layout_marginTop="2dp" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/itemRegistro"
        android:layout_toRightOf="@+id/itemRegistro"
        android:text="BORRAR" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBorrar"
        android:layout_alignEnd="@+id/btnBorrar"
        android:layout_alignRight="@+id/btnBorrar"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:text="ACTUALIZAR"/>
</RelativeLayout>